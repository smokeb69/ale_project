# ALE Forge Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Your Forge API Key (get from https://forge.manus.ai)
BUILT_IN_FORGE_API_KEY=your_forge_api_key_here

# ============================================================================
# FORGE API CONFIGURATION
# ============================================================================

# Forge API Base URL (default: https://forge.manus.ai)
# Change this if you're using a custom Forge instance
BUILT_IN_FORGE_API_URL=https://forge.manus.ai

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Port for the server to listen on
PORT=3000

# Node environment (production or development)
NODE_ENV=production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite database (default - easiest for standalone)
DATABASE_URL=file:./ale.db

# Or use MySQL/MariaDB:
# DATABASE_URL=mysql://username:password@localhost:3306/ale_db

# Or use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/ale_db

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Secret for session management (change this to a random string!)
# Generate one at: https://www.grc.com/passwords.htm
JWT_SECRET=change_this_to_a_random_secret_string_for_production

# ============================================================================
# OPTIONAL: OAUTH CONFIGURATION
# ============================================================================

# OAuth Server URL (if using Manus OAuth)
OAUTH_SERVER_URL=

# Manus App ID (if using Manus OAuth)
VITE_APP_ID=

# Owner OpenID (if using Manus OAuth)
OWNER_OPEN_ID=

# ============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# ============================================================================

# Enable debug logging
DEBUG=false

# Maximum request body size (for file uploads)
MAX_BODY_SIZE=50mb

# Session timeout (in seconds)
SESSION_TIMEOUT=86400

# ============================================================================
# NOTES
# ============================================================================
# 
# 1. NEVER commit the .env file to version control
# 2. Keep your API key secret
# 3. Use a strong random string for JWT_SECRET
# 4. The server will create the SQLite database automatically
# 5. For production, consider using MySQL or PostgreSQL
#
# ============================================================================
